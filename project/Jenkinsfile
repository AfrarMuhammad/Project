pipeline {
    agent {
        label 'afrar'
    }

    environment {
        PROJECT_DIR = 'project' 
        XAMPP_HTDOCS = 'C:\\xampp\\htdocs'
        PHP_PATH = 'C:\\xampp\\php\\php.exe' 
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo 'üì¶ Cloning project repository...'
                checkout scm
            }
        }

        stage('PHP Lint Check') {
            steps {
                echo 'üîç Running PHP lint check...'
                bat '''
                setlocal enabledelayedexpansion
                for /R %%f in (*.php) do (
                    echo Checking %%f...
                    "%PHP_PATH%" -l "%%f" || exit /b 1
                )
                endlocal
                '''
            }
        }

        stage('Deploy to XAMPP') {
            steps {
                echo 'üöÄ Deploying to XAMPP htdocs...'
                bat """
                rmdir /s /q "%XAMPP_HTDOCS%\\%PROJECT_DIR%"
                xcopy /s /i /y "%WORKSPACE%\\%PROJECT_DIR%" "%XAMPP_HTDOCS%\\%PROJECT_DIR%"
                """
            }
        }

        stage('Open in Browser') {
            steps {
                echo 'üåê Opening project in default browser...'
                bat 'start http://localhost/project/home.php' 
            }
        }
    }

    post {
        success {
            echo '‚úÖ Build and deployment completed successfully!'
        }
        failure {
            echo '‚ùå Build failed!'
        }
    }
}